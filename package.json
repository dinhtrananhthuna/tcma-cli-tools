{
  "name": "tcma-cli-tools",
  "version": "1.3.3",
  "description": "TCMA CLI Tools - Development utilities for TCMA team",
  "main": "dist/cli.js",
  "bin": {
    "tcmatools": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli.ts",
    "start": "node dist/cli.js",
    "prepublishOnly": "npm run build",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dinhtrananhthuna/tcma-cli-tools.git"
  },
  "keywords": [
    "cli",
    "development",
    "tools",
    "tcma"
  ],
  "author": "TCMA Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist/",
    "templates/",
    "config/"
  ],
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "csv-parser": "^3.2.0",
    "csv-writer": "^1.6.0",
    "figlet": "^1.6.0",
    "inquirer": "^9.2.12",
    "ora": "^5.4.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.6",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.45.0"
  }
}
